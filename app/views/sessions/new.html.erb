<% @page_title = "the right place | Log In" %>
<h1 align="center">Log in</h1>
<div align="center">
    <%= form_for(:session, url: login_path) do |f| %>
      <div  style="float:none; width:30%;">
      <table align="center" class="signup_form">
     
      <tr><td style="text-align:right;">Email: </td><td style="text-align:left;"><%= f.email_field :email %><br /></td></tr>
      
      <tr><td style="text-align:right;">Password: </td><td style="text-align:left;"><%= f.password_field :password %><br /></td></tr>
      
      <tr><td colspan="2"><%= f.submit "Login" %></td><td></td></tr>
      <tr><td colspan="2" style="text-align:center;"> <p>New user? <%= link_to "Sign up now!", new_user_path %></p> </td></tr>
      </table>
      </div>
      
    <% end %>
</div>