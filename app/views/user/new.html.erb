<% @page_title = "the right place | Sign Up" %>
<h1 align="center">Registration</h1>

<div>
    <%= form_for @user, url:user_index_path do |f| %>
      <div  style="float:left; width:50%;">
      <table align="center" class="signup_form">
        <tr><td colspan="2" style="text-align:center;"> <p><em><b>Please provide your details<b></em></p> </td></tr>
        <tr><td style="text-align:right;">Name:</td><td style="text-align:left;"> <%= f.text_field :name %><br /></td></tr>
    
      <tr><td style="text-align:right;">Contact No.:</td><td style="text-align:left;"><%= f.text_field :contactno %><br /></td></tr>
    
      <tr><td style="text-align:right;">Address:</td><td style="text-align:left;"><%= f.text_area :address %><br /></td></tr>
      
      <tr><td style="text-align:right;">Email: </td><td style="text-align:left;"><%= f.email_field :email %><br /></td></tr>
      
      <tr><td style="text-align:right;">Password: </td><td style="text-align:left;"><%= f.password_field :password %><br /></td></tr>
      
      <tr><td style="text-align:right;">Confirm Password: </td><td style="text-align:left;"><%= f.password_field :password_confirmation %><br /></td></tr>
      
      <tr><td colspan="2"><%= f.submit "Submit" %></td><td></td></tr>
      </table>
      </div>
      <div  style="float:right; width:50%;" class="signup_errors ">
        <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        Please satisfy the following <%= pluralize(@user.errors.count, "criteria") %> for successful registration.
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
      </div>
    <% end %>
</div>